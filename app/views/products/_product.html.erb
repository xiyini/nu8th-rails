<div id="<%= dom_id product %>" class="column card is-4" >

  <div class="card-image">
    <figure class="image">
    <%= link_to (image_tag product.image), "https://www.instagram.com/direct/t/340282366841710300949128215137215892537", target: :_blank, alt: "product.title"%>
    </figure>
  </div>

    <div class="card-header">
    <div class="card-header-title is-centered">
     <%= product.title %> 
    </div>
  </div>

    <div class="card-content">
      <div class="content" dir="rtl">
       <%= product.body %>
      </div>
    </div>
</div>
